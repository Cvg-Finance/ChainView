{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDirs": ["./"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node","mocha"],
  },
  "exclude": ["node_modules"],
  "include": ["./types/**/*.d.ts", "./src/**/*", "tests/**/*"],
}

